<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cl_yellow_android" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtTaskNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Task :"
                        android:textColor="@color/cl_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtTask"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:maxLength="18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtTaskDesciptionNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Description :"
                        android:textColor="@color/cl_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:lines="3" />
            </LinearLayout>

            <!-- Task start and end -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtTaskStartNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Start :"
                        android:textColor="@color/cl_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <DatePicker
                    android:id="@+id/dpkStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtTaskEndNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="End :"
                        android:textColor="@color/cl_black"
                        android:textSize="20dp" />
                </LinearLayout>

                <DatePicker
                    android:id="@+id/dpkEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Add" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>